{
  "name": "libaleph-play",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build:node": "tsc -p tsconfig.node.json",
    "build:web": "tsc -p tsconfig.web.json",
    "build": "npm run build:node && npm run build:web",
    "dev:manifest": "ts-node --project tsconfig.node.json src/node/manifest.ts",
    "dev:server": "ts-node --project tsconfig.node.json src/node/dev-server.ts",
    "manifest:compiled": "node dist/node/manifest.js"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
